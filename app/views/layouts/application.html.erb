<!DOCTYPE html>
<html>
<head>
  <title>ShippingApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if current_user %>
	<div class="nav-bar">
		<%= link_to "Home",  boats_path %> <%= link_to "Boats list",  jobs_path %> <%= link_to "Following",  followers_path %> <span><%= link_to "Logout",  destroy_user_session_path, method: :delete %></span>
	</div>
<% else %>
	<div class="nav-bar">
	<%= link_to "Sign In",  new_user_session_path %> 
	</div>
<% end %>
<%= yield %>

</body>
</html>
